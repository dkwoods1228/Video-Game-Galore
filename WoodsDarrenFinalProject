#Button 1 to calculate price of hardware
b1 = Button(window, text="Calculate Price of Hardware", width=30, bg='red', fg='white', command=calculate)
b1.place(x=100, y=600)

#Button 2 to calculate price of software
b2 = Button(window, text="Calculate Price of Software", width=30, bg='green', fg='white', command=calculate2)
b2.place(x=300, y=600)

#Button 3 to calculate price of both (TOTAL PRICE)
b3 = Button(window, text="Calculate Total Price", width=30, bg='blue', fg='white', command=calculate3)
b3.place(x=500, y=600)

#Creating Exit Button
b4 = tk.Button(window, text="Exit", bg='black', fg='white', width=10, command=exit)
b4.place(x=700, y=600)

#Incorporating Delivery Methods Button (Second window)
b5 = tk.Button(window, text="Delivery Methods", bg='gray', fg='white', width=20, command=create)
b5.place(x=775, y=600)


window.mainloop()
