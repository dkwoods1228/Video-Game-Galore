from tkinter import *
import tkinter as tk

# Creating Window
window = Tk()
window.geometry("1000x700")
window.title("Video Game Galore")

# Defining total calculations of hardware


def calculate():
    nintendo_switch = e1.get()
    ps5 = e2.get()
    xbox = e3.get()
    total = ((int(nintendo_switch)*299.99)+(int(ps5)*399.99)+(int(xbox)*299.99))
    print("Your total is: $", total)
    label25 = Label(window, text=total, font="times 20 bold")
    label25.place(x=650, y=400)

# Defining total calculation of software


def calculate2():
    action = e4.get()
    adventure = e5.get()
    rpg = e6.get()
    shooter = e7.get()
    sport = e8.get()
    total = ((int(action)*10.99)+(int(adventure)*12.99)+(int(rpg)*20.99)+(int(shooter)*19.99)+(int(sport)*15.99))
    print("Your total is: $", total)
    label26 = Label(window, text=total, font="times 20 bold")
    label26.place(x=650, y=400)

# Defining total price (ALL)


def calculate3():
    nintendo_switch = e1.get()
    ps5 = e2.get()
    xbox = e3.get()
    action = e4.get()
    adventure = e5.get()
    rpg = e6.get()
    shooter = e7.get()
    sport = e8.get()
    total = ((int(nintendo_switch) * 299.99)+(int(ps5) * 399.99) + (int(xbox) * 299.99) + (int(action) * 10.99) +
             (int(adventure)*12.99)+(int(rpg)*20.99)+(int(shooter)*19.99)+(int(sport)*15.99))
    print("Your total is: $", total)
    label27 = Label(window, text=total, font="times 20 bold")
    label27.place(x=650, y=400)

# Creating new window


def create():
    new_window = Toplevel()
    old_window = Tk()
    old_window.destroy()
    new_window.title('Delivery Methods')
    label30 = Label(new_window, text="Shipping: $9.99 under $50", font = "times 20 bold")
    label30.pack()
    label31 = Label(new_window, text="Shipping: Free over $50", font= "times 20 bold")
    label31.pack()
    label32 = Label(new_window, text="Pickup: Free", font="times 20 bold")
    label32.pack()


# Creating Store Title
label21 = Label(window, text="Video Game Galore Store", font="times 30 bold")
label21.place(x=450, y=20, anchor="center")

